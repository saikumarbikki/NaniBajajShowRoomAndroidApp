<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_base_white">

    <TextView
        android:id="@+id/color_avaliblity_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif"
        android:text="Colors Avalible"
        android:textColor="@color/lite_fb_blue"
        android:textSize="25dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/color_avaliblity_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/color_avaliblity_tv"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/color_first_view"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            android:background="@color/red"></ImageView>

        <TextView
            android:id="@+id/color_first_view_tv"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/color_first_view"
            android:layout_margin="5dp"
            android:minLines="2"
            android:text="Color Name"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/color_second_view"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/color_first_view"
            android:background="@color/red"
            android:visibility="gone"></ImageView>

        <TextView
            android:id="@+id/color_second_view_tv"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/color_second_view"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/color_first_view_tv"
            android:minLines="2"
            android:text="Color Name"
            android:textAlignment="center"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/color_third_view"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/color_second_view"
            android:background="@color/red"
            android:visibility="gone"></ImageView>

        <TextView
            android:id="@+id/color_third_view_tv"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/color_third_view"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/color_second_view_tv"
            android:minLines="2"
            android:text="Color Name"
            android:textAlignment="center"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/color_fourth_view"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/color_third_view"
            android:background="@color/red"
            android:visibility="gone"></ImageView>

        <TextView
            android:id="@+id/color_fourth_view_tv"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/color_fourth_view"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/color_third_view_tv"
            android:minLines="2"
            android:text="Color Name"
            android:textAlignment="center"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/color_fifth_view"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/color_fourth_view"
            android:background="@color/red"
            android:visibility="gone"></ImageView>

        <TextView
            android:id="@+id/color_fifth_view_tv"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/color_fifth_view"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/color_fourth_view_tv"
            android:minLines="2"
            android:text="Color Name"
            android:textAlignment="center"
            android:visibility="gone" />
    </RelativeLayout>


</RelativeLayout>